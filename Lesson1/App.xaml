<Application x:Class="Lesson1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lesson1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Grid>
                <Rectangle Width="{TemplateBinding Width}" RadiusX="5" RadiusY="5" Fill="{TemplateBinding Background}"></Rectangle>
                <ContentPresenter Content="{TemplateBinding Content}" RecognizesAccessKey="True" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
            </Grid>
        </ControlTemplate>
    </Application.Resources>
</Application>
